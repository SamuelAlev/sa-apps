{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "lib": ["ES2021", "DOM"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "scripts/**/*"],
    "exclude": ["node_modules", "dist"]
}
