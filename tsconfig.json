{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "exclude": ["**/dist", "**/node_modules"]
}
