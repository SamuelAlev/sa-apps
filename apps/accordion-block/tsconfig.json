{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "jsx": "react-jsx",
        "lib": ["ES2021", "DOM"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["vite/client"],
    },
    "include": ["src/**/*", "tests/**/*", "vitest.config.ts"],
    "exclude": ["node_modules", "dist"],
}
